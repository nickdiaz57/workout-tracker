<% if !@user.first_name.empty? %>
    <h2>Welcome, <%= @user.first_name %>.</h2>
<% else %>
    <h2>Welcome, <%= @user.username %>.</h2>
<% end %>

<h3>My Workouts</h3>
<% @user.workouts.each do |w| %>
    <p><b><%= w.name %></b> - Score: <%= w.score %></p>
<% end %>
